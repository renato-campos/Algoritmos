programa
{
	//inclua biblioteca Matematica --> math
	funcao inicio()
	{
		inteiro numero
		escreva("Digite um número: ")
		leia(numero)
		escreva("O antecessor de " + numero + " é o valor " + (numero - 1))
		escreva("\nO sucessor de " + numero + " é o valor " + (numero + 1))
	}
}
